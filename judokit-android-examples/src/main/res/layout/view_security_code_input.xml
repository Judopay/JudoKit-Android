<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.judopay.judokit.android.ui.cardentry.components.JudoEditTextInputLayout
        android:id="@+id/securityCodeInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_24"
        android:layout_marginEnd="@dimen/space_24"
        android:layout_marginTop="@dimen/space_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/securityCodeEditText"
            style="@style/JudoTheme.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Security code"
            android:inputType="number" />

    </com.judopay.judokit.android.ui.cardentry.components.JudoEditTextInputLayout>

    <com.judopay.judokit.android.ui.cardentry.components.JudoEditTextInputLayout
        android:id="@+id/cardHolderInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_24"
        android:layout_marginEnd="@dimen/space_24"
        android:layout_marginBottom="@dimen/space_24"
        android:layout_marginTop="@dimen/space_16"
        app:layout_constraintTop_toBottomOf="@id/securityCodeInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/cardHolderEditText"
            style="@style/JudoTheme.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Cardholder name"
            android:inputType="textPersonName" />

    </com.judopay.judokit.android.ui.cardentry.components.JudoEditTextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>