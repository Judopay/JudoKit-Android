<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/payment_selector_item_height"
    android:gravity="center"
    android:minWidth="@dimen/payment_selector_item_min_width"
    android:orientation="horizontal"
    android:paddingStart="@dimen/space_12"
    android:paddingEnd="@dimen/space_12">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/paymentImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_cards" />

    <TextView
        android:id="@+id/paymentTextView"
        style="@style/JudoTheme.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8"
        android:visibility="gone"
        tools:text="Cards"
        tools:visibility="visible" />
</LinearLayout>