<resources>
    <style name="JudoTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
    </style>

    <!-- App bar related stuff -->
    <style name="JudoTheme.AppBarLayout" parent="">
        <item name="android:textColorPrimary">?attr/colorOnPrimarySurface</item>
        <item name="colorControlNormal">?attr/colorOnPrimarySurface</item>
    </style>

    <!-- Buttons -->
    <style name="JudoTheme.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/min_touch_target_size</item>
        <item name="android:layout_height">@dimen/min_touch_target_size</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <!-- Black toolbar back button -->
    <style name="JudoTheme.BackButton" parent="JudoTheme.ImageButton">
        <item name="android:layout_width">@dimen/min_touch_target_size</item>
        <item name="android:layout_height">@dimen/min_touch_target_size</item>
        <item name="android:layout_marginStart">@dimen/space_8</item>
        <item name="android:layout_marginTop">@dimen/space_4</item>
        <item name="srcCompat">@drawable/ic_back_20dp</item>
    </style>

    <!-- Text like buttons eg.: ADD CARD, EDIT ... -->
    <style name="JudoTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/jpBlackColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">@dimen/space_6</item>
        <item name="android:paddingRight">@dimen/space_6</item>
        <item name="android:minHeight">@dimen/min_touch_target_size</item>
        <item name="android:minWidth">@dimen/min_touch_target_size</item>
    </style>

    <!-- Outlined text like buttons eg.: SCAN CARD ... -->
    <style name="JudoTheme.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/jpBlackColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">@dimen/space_6</item>
        <item name="android:paddingRight">@dimen/space_6</item>
        <item name="android:minHeight">@dimen/min_touch_target_size</item>
        <item name="android:minWidth">@dimen/min_touch_target_size</item>
        <item name="strokeColor">@color/jpBlackColor</item>
    </style>

    <!-- Black rounded button, usually used for PAY NOW -->
    <style name="JudoTheme.BlackRoundedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textColor">@color/jpWhiteColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/black_button_background_selector</item>
    </style>

    <!-- Bottom Sheets -->
    <style name="JudoTheme.BottomSheetDialogTheme" parent="JudoTheme.BottomSheetDialog" />

    <style name="JudoTheme.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">@style/JudoTheme.BottomSheetDialogAnimation</item>
        <item name="bottomSheetStyle">@style/JudoTheme.BottomSheet.Modal</item>
    </style>

    <style name="JudoTheme.BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="JudoTheme.FullscreenDialog" parent="JudoTheme">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="JudoTheme.BottomSheet.Modal" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_modal_background</item>
    </style>

    <style name="JudoTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/jpBlackColor</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="JudoTheme.TextInputEditText" parent="Widget.AppCompat.EditText">
        <!-- Theme attributes -->
        <item name="android:textColorHint">@color/jpBrownGrayColor</item>
        <item name="colorControlNormal">@color/jpBlackColor</item>
        <item name="colorControlActivated">@color/jpBlackColor</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textColor">@color/jpBlackColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="JudoTheme.ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/jpRedColor</item>
        <item name="android:textSize">@dimen/caption</item>
    </style>

    <style name="JudoTheme.TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textColor">@color/jpBlackColor</item>
    </style>

    <style name="JudoTheme.Title.Large" parent="JudoTheme.TextView">
        <item name="android:textSize">@dimen/large_title</item>
    </style>

    <style name="JudoTheme.Title" parent="JudoTheme.TextView">
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="JudoTheme.Title.Light" parent="JudoTheme.Title">
        <item name="android:textColor">@color/jpWhiteColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="JudoTheme.Headline" parent="JudoTheme.TextView">
        <item name="android:textSize">@dimen/headline</item>
    </style>

    <style name="JudoTheme.Headline.Regular" parent="JudoTheme.TextView">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/headline</item>
    </style>

    <style name="JudoTheme.Headline.Light" parent="JudoTheme.Headline">
        <item name="android:textColor">@color/jpLightGrayColor</item>
    </style>

    <style name="JudoTheme.Body" parent="JudoTheme.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/body</item>
    </style>

    <style name="JudoTheme.Body.Regular" parent="JudoTheme.TextView">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/body</item>
    </style>

    <style name="JudoTheme.Caption" parent="JudoTheme.TextView">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/caption</item>
    </style>

    <style name="JudoTheme.Caption.Light" parent="JudoTheme.Caption">
        <item name="android:textColor">@color/jpBrownGrayColor</item>
    </style>

    <style name="JudoTheme.Caption.Error" parent="JudoTheme.Caption">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textColor">@color/jpRedColor</item>
    </style>

    <style name="JudoTheme.Caption.Error.Medium" parent="JudoTheme.Caption.Error">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textColor">@color/jpRedColor</item>
    </style>
</resources>
