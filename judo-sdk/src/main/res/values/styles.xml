        <item name="colorPrimary">@color/judo_blue</item>
        <item name="colorButtonNormal">@color/judo_teal</item>
    </style>

    <style name="input_layout">
        <item name="android:layout_marginTop">@dimen/medium_padding</item>
        <item name="android:layout_width">match_parent</item>
