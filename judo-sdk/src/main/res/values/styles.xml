<resources>

    <style name="Theme" />

    <style name="Theme.Judo" parent="Theme.AppCompat">
        <item name="buttonLabel">@string/pay</item>
        <item name="buttonStyle">@style/Widget.Judo.Button</item>
        <item name="cameraIcon">@drawable/ic_photo_camera_white</item>
        <item name="colorPrimary">@color/judo_dark_blue</item>
        <item name="colorButtonNormal">@color/judo_teal</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="overlayBackground">@color/judo_black_87</item>
        <item name="secureServerMessageShown">false</item>
    </style>

    <style name="Theme.Judo.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.AppTheme.ActionBar</item>
        <item name="android:textColorHint">@color/judo_black_38</item>
        <item name="android:textColorSecondary">@color/judo_black_54</item>
        <item name="buttonLabel">@string/pay</item>
        <item name="buttonStyle">@style/Widget.Judo.Button</item>
        <item name="colorControlNormal">@color/judo_black_16</item>
        <item name="colorPrimaryDark">@color/judo_dark_blue</item>
        <item name="colorPrimary">@color/judo_blue</item>
        <item name="colorButtonNormal">@color/judo_teal</item>
        <item name="overlayBackground">@color/judo_white_90</item>
        <item name="secureServerMessageShown">false</item>
        <item name="cameraIcon">@drawable/ic_photo_camera_black</item>
    </style>

    <style name="Theme.Judo.Light" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint">@color/judo_black_38</item>
        <item name="android:textColorSecondary">@color/judo_black_54</item>
        <item name="buttonLabel">@string/pay</item>
        <item name="buttonStyle">@style/Widget.Judo.Button</item>
        <item name="colorButtonNormal">@color/judo_teal</item>
        <item name="overlayBackground">@color/judo_white_90</item>
        <item name="secureServerMessageShown">false</item>
        <item name="cameraIcon">@drawable/ic_photo_camera_black</item>
    </style>

    <style name="Theme.Judo.Light.ShowSecurityMessage" parent="Theme.Judo.Light">
        <item name="secureServerMessageShown">true</item>
    </style>

    <style name="Theme.Judo.Light.ConfirmPayment" parent="Theme.Judo.Light">
        <item name="buttonLabel">@string/confirm_payment</item>
    </style>

    <style name="Theme.Judo.Light.EnterCardDetails" parent="Theme.Judo.Light">
        <item name="activityTitle">@string/enter_card_details</item>
    </style>

    <style name="ThemeOverlay.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Widget" />

    <style name="Widget.Judo" />

    <style name="Widget.Judo.EntryLayout">
        <item name="android:layout_marginTop">@dimen/medium_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <style name="Widget.Judo.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:imeOptions">actionNext|flagNoExtractUi</item>
    </style>

    <style name="Widget.Judo.CardNumber" parent="Widget.Judo.EditText">
        <item name="android:hint">@string/card_number_label</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:digits">01234 56789</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">19</item>
    </style>

    <style name="Widget.Judo.Date" parent="Widget.Judo.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:digits">0123456789/</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">5</item>
    </style>

    <style name="Widget.Judo.Postcode" parent="Widget.Judo.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textNoSuggestions|textCapCharacters</item>
        <item name="android:privateImeOptions">nm</item>
    </style>

    <style name="Widget.Judo.IssueNumber" parent="Widget.Judo.EditText">
        <item name="android:hint">@string/issue_number_label</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
    </style>

    <style name="Widget.Judo.ExpiryDate" parent="Widget.Judo.Date">
        <item name="android:hint">@string/expiry_date_label</item>
    </style>

    <style name="Widget.Judo.StartDate" parent="Widget.Judo.Date">
        <item name="android:hint">@string/start_date_label</item>
    </style>

    <style name="Widget.Judo.SecurityCode" parent="Widget.Judo.EditText">
        <item name="android:hint">CVV</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
    </style>

    <style name="Widget.Judo.CardImage">
        <item name="android:alpha">0.5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/small_padding</item>
    </style>

    <style name="TextAppearance.Judo.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/judo_red</item>
        <item name="android:textSize">@dimen/judo_small_text_size</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.Judo.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.Judo.Text" />

    <style name="Widget.Judo.Text.Hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/judo_small_text_size</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginLeft">@dimen/small_padding</item>
    </style>

    <style name="Widget.Judo.PaddedLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">70dp</item>
        <item name="android:paddingLeft">@dimen/medium_padding</item>
        <item name="android:paddingRight">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/medium_padding</item>
    </style>

    <style name="Widget.Judo.Overlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.Judo.SplitHorizontalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="Widget.Judo.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3.5dp</item>
        <item name="android:layout_marginTop">6.5dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Widget.Judo.TextSecondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/small_padding</item>
        <item name="android:layout_marginRight">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/large_padding</item>
        <item name="android:lineSpacingMultiplier">@dimen/spaced_text</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/judo_small_text_size</item>
    </style>

</resources>
