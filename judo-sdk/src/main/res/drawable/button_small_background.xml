<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:padding="@dimen/padding_10" android:shape="rectangle">
            <stroke android:width="@dimen/width_1" android:color="@color/black" />
            <corners android:bottomLeftRadius="@dimen/corner_radius_4" android:bottomRightRadius="@dimen/corner_radius_4" android:topLeftRadius="@dimen/corner_radius_4" android:topRightRadius="@dimen/corner_radius_4" />
            <padding android:left="@dimen/medium_padding" android:right="@dimen/medium_padding" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:padding="@dimen/padding_10" android:shape="rectangle">
            <solid android:color="@color/grey" />
            <stroke android:width="@dimen/width_1" android:color="@color/black" />
            <corners android:bottomLeftRadius="@dimen/corner_radius_4" android:bottomRightRadius="@dimen/corner_radius_4" android:topLeftRadius="@dimen/corner_radius_4" android:topRightRadius="@dimen/corner_radius_4" />
            <padding android:left="@dimen/medium_padding" android:right="@dimen/medium_padding" />
        </shape>
    </item>
</selector>