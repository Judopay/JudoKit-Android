<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/large_padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/cancel"
                app:layout_constraintBottom_toBottomOf="@id/scanCardButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/scanCardButton" />

            <ImageView
                android:id="@+id/scanCardLoader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/cancelButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cancelButton"
                app:srcCompat="@drawable/ic_judo_loader" />

            <Button
                android:id="@+id/scanCardButton"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_36"
                android:background="@drawable/button_small_background"
                android:drawablePadding="@dimen/small_padding"
                android:text="@string/scan_card"
                app:drawableStartCompat="@drawable/ic_scan_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/viewCardEntryForm"
                layout="@layout/view_card_entry_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_padding"
                app:layout_constraintTop_toBottomOf="@id/scanCardButton" />

            <com.judopay.view.SecureServerTextView
                android:id="@+id/secureServerText"
                style="@style/Widget.Judo.TextSecondary"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewCardEntryForm" />

            <com.judopay.view.CardEntryButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_entry_height"
                android:layout_marginTop="@dimen/large_padding"
                android:layout_marginBottom="@dimen/large_padding"
                app:layout_constraintBottom_toTopOf="@id/secureTransmission"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewCardEntryForm" />

            <ImageView
                android:id="@+id/secureIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/secureTransmission"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/secureTransmission"
                app:srcCompat="@drawable/ic_secure" />

            <TextView
                android:id="@+id/secureTransmission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/medium_padding"
                android:text="@string/secure_server_transmission"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/secureIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>