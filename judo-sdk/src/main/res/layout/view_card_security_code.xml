<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.judopay.view.CardSecurityCodeView
        android:id="@+id/cvv_image_view"
        style="@style/Widget.Judo.CardImage"
        android:layout_marginTop="15dp"
        tools:ignore="RtlHardcoded" />

    <com.judopay.view.JudoTextInputLayout
        android:id="@+id/cvv_input_layout"
        style="@style/EntryLayout">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/cvv_edit_text"
            style="@style/Widget.Judo.Cvv"
            android:layout_weight="1" />

    </com.judopay.view.JudoTextInputLayout>

    <TextView
        android:id="@+id/cvv_helper_text"
        style="@style/judo_hint_text"
        android:layout_below="@id/cvv_input_layout"
        android:text="@string/security_code"
        tools:visibility="visible" />

</merge>