<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.judopay.view.JudoTextInputLayout
        android:id="@+id/post_code_input_layout"
        style="@style/Widget.Judo.EntryLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_weight="1">

        <com.judopay.view.JudoEditText
            android:id="@+id/post_code_edit_text"
            style="@style/Widget.Judo.Postcode"
            android:layout_gravity="bottom"
            android:hint="@string/billing_postcode"
            android:maxLength="8"
            tools:ignore="UnusedAttribute" />

    </com.judopay.view.JudoTextInputLayout>

</merge>