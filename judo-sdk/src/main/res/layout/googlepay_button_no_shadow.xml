<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48sp"
    app:background="@drawable/googlepay_button_no_shadow_background"
    android:clickable="true"
    android:contentDescription="@string/googlepay_button_content_description"
    android:focusable="true"
    android:paddingTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/googlepay_button_content"
            android:contentDescription="@string/google_pay_logo" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/googlepay_button_overlay"
        android:contentDescription="@string/google_pay_button_overlay" />
</RelativeLayout>
