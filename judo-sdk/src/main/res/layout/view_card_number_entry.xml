<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardNumberContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_44"
    android:background="@drawable/edit_text_background"
    android:paddingStart="@dimen/padding_14"
    android:paddingEnd="@dimen/padding_14">

    <TextView
        android:visibility="gone"
        android:id="@+id/cardNumberError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6"
        android:textColor="@color/error"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/long_card_number" />

    <com.judopay.view.JudoEditText
        android:id="@+id/cardNumberEditText"
        style="@style/Widget.Judo.CardNumber"
        android:background="@null"
        android:hint="@string/card_number_label"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardNumberError" />

    <ImageView
        android:id="@+id/cardNumberImageView"
        style="@style/Widget.Judo.CardImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>