<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout style="@style/payment_form_container">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:textColor="#E9CFA1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/card_number_input_layout"
                    style="@style/EntryLayout">

                    <EditText style="@style/Widget.Judo.CardNumber" />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/start_date_issue_number_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                tools:visibility="visible">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/start_date_input_layout"
                    style="@style/EntryLayout"
                    android:layout_weight="1">

                    <EditText
                        style="@style/Widget.Judo.StartDate"
                        tools:ignore="TextFields" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/issue_number_input_layout"
                        style="@style/EntryLayout">

                        <EditText style="@style/Widget.Judo.IssueNumber" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/expiry_date_input_layout"
                    style="@style/EntryLayout">

                    <EditText
                        style="@style/Widget.Judo.ExpiryDate"
                        android:layout_weight="1"
                        tools:ignore="TextFields" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/security_code_input_layout"
                    style="@style/EntryLayout">

                    <EditText
                        style="@style/Widget.Judo.SecurityCode"
                        android:layout_weight="1" />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/country_postcode_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                tools:visibility="visible">

                <Spinner
                    android:id="@+id/country_spinner"
                    style="@style/Widget.AppCompat.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.5dp"
                    android:layout_weight="1" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/post_code_input_layout"
                    style="@style/EntryLayout"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1">

                    <EditText
                        style="@style/Widget.Judo.Postcode"
                        android:layout_gravity="bottom"
                        android:hint="@string/billing_postcode"
                        tools:ignore="UnusedAttribute" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/footer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_padding"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginTop="@dimen/large_padding"
                android:lineSpacingMultiplier="@dimen/spaced_text"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/judo_small_text_size" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/payment_button"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Confirm Â£100 Top Up"
        android:textAllCaps="false"
        android:visibility="gone" />

</FrameLayout>