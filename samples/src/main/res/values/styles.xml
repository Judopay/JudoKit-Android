<resources>

    <style name="list_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="list_button_primary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="list_button_secondary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#767676</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Judo.Text.Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/small_padding</item>
        <item name="android:layout_marginRight">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/large_padding</item>
        <item name="android:lineSpacingMultiplier">@dimen/spaced_text</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/judo_small_text_size</item>
    </style>

</resources>